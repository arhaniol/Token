<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:layout_width="320dp"
            android:layout_height="350dp" android:id="@+id/explanation"
            android:text="@string/explanation_text" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_alignParentTop="true" android:layout_marginEnd="50dp"
            android:layout_marginTop="46dp" android:layout_marginRight="50dp"
            android:textSize="36sp" android:layout_alignParentStart="true" android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp" android:layout_alignParentLeft="true"/>
    <Button
            android:text="Not Allow"
            android:layout_width="150dp"
            android:layout_height="55dp" android:id="@+id/buttonDontAllow"
            android:background="#F10707" android:layout_marginTop="0dp" android:layout_below="@+id/explanation"
            android:layout_alignRight="@+id/explanation" android:layout_marginRight="0dp"
            android:layout_marginEnd="0dp" android:layout_alignEnd="@+id/explanation"/>
    <Button
            android:text="Allow"
            android:layout_width="150dp"
            android:layout_height="55dp" android:id="@+id/buttonAllow"
            android:background="#02C60B" android:layout_marginTop="0dp" android:layout_below="@+id/explanation"
            android:layout_marginLeft="0dp" android:layout_marginStart="0dp"
            android:layout_alignLeft="@+id/explanation" android:layout_alignStart="@+id/explanation"/>
</RelativeLayout>